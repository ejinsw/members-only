<div class="h-full w-full flex px-6 overflow-auto items-center gap-8">
  <% for (let i = 0; i < messages.length; i++) { %>
  <div class="bg-slate-200 flex flex-col rounded-xl text-slate-800 w-48 h-40 border-slate-300 border-[1px]">
    <% if (user && user.membership_active) { %>
    <div class="pt-4 px-6 sticky top-0 bg-slate-200 flex justify-between items-start rounded-xl">
      <div>
        <h1 class="text-slate-400"><%= `@${messages[i].username}` %></h1>
        <h1><%= `${messages[i].first_name} ${messages[i].last_name}` %></h1>
      </div>
      <% if (user && user.id === messages[i].userid) { %>
      <form action="/delete-message" method="post">
        <input hidden name="message" value="<%= messages[i].messageid %>">
        <button class="font-normal hover:font-bold">
          x
        </button>
      </form>
      <% } %>
    </div>
    <% } %>
    <div class="overflow-auto flex justify-center px-6 mt-4">
      <p><%= messages[i].content %></p>
    </div>
  </div>
  <% } %>

  <% if (user) { %>
  <div class="px-6 flex  items-center rounded-xl w-48 h-40">

    <a class="bg-slate-50 px-4 py-1 text-slate-800 rounded-xl" href="/write-message">+</a>
  </div>
  <% } %>
</div>
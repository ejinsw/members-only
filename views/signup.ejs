<div class="flex justify-center items-center h-full">
  <div class="bg-slate-200 px-8 py-4 flex flex-col rounded-xl text-slate-800">
    <form action="" method="POST">
      <div class="flex flex-col w-64">
        <div class="flex gap-4 mt-8">
          <div class="flex flex-col">
            <label for="first_name" class="ml-1 mb-1">First</label>
            <input type="text" name="first_name" placeholder="First name"
            class="px-2 py-1 rounded-lg border-2 w-full" value="<%= data ?
            data.first_name : '' %>"" required />
          </div>
          <div class="flex flex-col">
            <label for="last_name" class="ml-1 mb-1">Last</label>
            <input type="text" name="last_name" placeholder="Last name"
            class="px-2 py-1 rounded-lg border-2 w-full" value="<%= data ?
            data.last_name : '' %>"" required />
          </div>
        </div>
        <div class="flex flex-col mt-8">
          <label for="username" class="ml-1 mb-1">Username</label>
          <input type="text" name="username" placeholder="Username" class="px-2
          py-1 rounded-lg border-2 w-64" value="<%= data ? data.username : ''
          %>"" required />
        </div>
        <div class="flex flex-col mt-8">
          <label for="password" class="ml-1 mb-1">Password</label>
          <input type="text" name="password" placeholder="Password" class="px-2
          py-1 rounded-lg border-2 w-64" value="<%= data ? data.password : ''
          %>"" required />
        </div>
        <span class="text-center text-red-500 mt-2 mb-6 h-2">
          <% if (errors) { %> <%= errors[0].msg %> <% } %>
        </span>
        <button
          type="submit"
          class="border-2 bg-slate-700 w-fit h-fit mx-auto px-4 py-2 rounded-xl text-slate-50 hover:bg-slate-600"
        >
          Sign Up
        </button>
      </div>
    </form>
  </div>
</div>
